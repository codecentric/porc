{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "additionalProperties": false,
    "definitions": {
        "FileTask": {
            "additionalProperties": false,
            "properties": {
                "cwd": {
                    "description": "Working directory relative to the .porcrc",
                    "title": "cwd",
                    "type": "string"
                },
                "dependsOn": {
                    "description": "Dependent task names.",
                    "items": {
                        "type": "string"
                    },
                    "title": "dependsOn",
                    "type": "array"
                },
                "exec": {
                    "description": "Execution command, passed to the shell executable via the '-c' argument.",
                    "title": "exec",
                    "type": "string"
                },
                "quiet": {
                    "description": "Do not write STDOUT to console?\nDefault: false",
                    "title": "quiet",
                    "type": "boolean"
                },
                "waitFor": {
                    "$ref": "#/definitions/FileWaitFor",
                    "description": "Optional configuration how long to wait after the process has started.\nIf it's a number, it's a delay in ms.\nDefault: 'exit' => unit after exit",
                    "title": "waitFor"
                }
            },
            "title": "FileTask",
            "type": "object"
        },
        "FileWaitFor": {
            "anyOf": [
                {
                    "$ref": "#/definitions/FileWaitForConsole"
                },
                {
                    "$ref": "#/definitions/FileWaitForMs"
                },
                {
                    "$ref": "#/definitions/FileWaitForExit"
                }
            ],
            "title": "FileWaitFor"
        },
        "FileWaitForConsole": {
            "additionalProperties": false,
            "properties": {
                "killSignal": {
                    "description": "Signal to use to terminate a process after a timeout",
                    "enum": [
                        "SIGKILL",
                        "SIGTERM"
                    ],
                    "title": "killSignal",
                    "type": "string"
                },
                "text": {
                    "description": "Text to search for in stdout",
                    "title": "text",
                    "type": "string"
                },
                "timeout": {
                    "description": "Timeout after which the process is considered failing, while waiting for exit or missing stdout/stderr output.",
                    "title": "timeout",
                    "type": "number"
                },
                "type": {
                    "enum": [
                        "console"
                    ],
                    "title": "type",
                    "type": "string"
                }
            },
            "required": [
                "text",
                "type"
            ],
            "title": "FileWaitForConsole",
            "type": "object"
        },
        "FileWaitForExit": {
            "additionalProperties": false,
            "properties": {
                "killSignal": {
                    "description": "Signal to use to terminate a process after a timeout",
                    "enum": [
                        "SIGKILL",
                        "SIGTERM"
                    ],
                    "title": "killSignal",
                    "type": "string"
                },
                "timeout": {
                    "description": "Timeout after which the process is considered failing, while waiting for exit or missing stdout/stderr output.",
                    "title": "timeout",
                    "type": "number"
                },
                "type": {
                    "enum": [
                        "exit"
                    ],
                    "title": "type",
                    "type": "string"
                }
            },
            "required": [
                "type"
            ],
            "title": "FileWaitForExit",
            "type": "object"
        },
        "FileWaitForMs": {
            "additionalProperties": false,
            "properties": {
                "delay": {
                    "description": "Delay to wait after startup before starting followup services",
                    "title": "delay",
                    "type": "number"
                },
                "killSignal": {
                    "description": "Signal to use to terminate a process after a timeout",
                    "enum": [
                        "SIGKILL",
                        "SIGTERM"
                    ],
                    "title": "killSignal",
                    "type": "string"
                },
                "type": {
                    "enum": [
                        "ms"
                    ],
                    "title": "type",
                    "type": "string"
                }
            },
            "required": [
                "delay",
                "type"
            ],
            "title": "FileWaitForMs",
            "type": "object"
        }
    },
    "properties": {
        "colors": {
            "description": "Support colorized output. Default: true",
            "title": "colors",
            "type": "boolean"
        },
        "focus": {
            "title": "focus",
            "type": "boolean"
        },
        "shell": {
            "description": "Use an alternative shell. For requirements and defaults, see the `shell` argument here:\nhttps://nodejs.org/api/child_process.html#child_processexeccommand-options-callback",
            "title": "shell",
            "type": "string"
        },
        "tasks": {
            "additionalProperties": {
                "$ref": "#/definitions/FileTask"
            },
            "description": "Map of task configurations.",
            "title": "tasks",
            "type": "object"
        },
        "theme": {
            "description": "Use colors fitting for dark or light backgrounds..\nDefault: 'dark'",
            "enum": [
                "dark",
                "light"
            ],
            "title": "theme",
            "type": "string"
        },
        "ui": {
            "description": "Start the UI.\nDefault: false",
            "title": "ui",
            "type": "boolean"
        },
        "verbose": {
            "description": "Print out status messages",
            "title": "verbose",
            "type": "boolean"
        }
    },
    "required": [
        "tasks"
    ],
    "type": "object"
}

