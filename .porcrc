{
    "tasks": {
        "shared": {
            "exec": "echo Shared"
        },
        "first": {
            "dependsOn": ["shared"],
            "exec": "echo Test >&2; sleep 2; echo Done",
            "waitFor": {
                "stderr": "Test",
                "timeout": 500
            }
        },
        "second": {
            "dependsOn": ["shared"],
            "cwd": "lib",
            "exec": "ls"
        },
        "next": {
            "dependsOn": ["first", "second"]
        },
        "failingWithTimeout": {
            "exec": "echo Test; sleep 2; echo Done",
            "waitFor": {
                "stdout": "Done",
                "timeout": 500
            }
        }
    }
}
