{
    "$schema": "./porc-schema.json",
    "verbose": false,
    "theme": "dark",
    "tasks": {
        "shared": {
            "exec": "echo Shared"
        },
        "first": {
            "dependsOn": ["shared"],
            "exec": "echo Test; sleep 2; echo Done >&2; echo Done 2",
            "quiet": true,
            "waitFor": {
                "type": "console",
                "text": "Test",
                "timeout": 500
            }
        },
        "second": {
            "dependsOn": ["shared"],
            "cwd": "lib",
            "exec": "ls"
        },
        "next": {
            "dependsOn": ["first", "second"]
        },
        "failingWithTimeout": {
            "exec": "echo Test; sleep 2; echo Done",
            "waitFor": {
                "type": "console",
                "text": "Done",
                "timeout": 500
            }
        },
        "long-running": {
            "exec": "nc -l 9876"
        },
        "out1": {
            "exec": "ping 127.0.0.1"
        },
        "out2": {
            "exec": "ping 127.0.0.1"
        }
    }
}
